@model LifeBridge.Models.User
@{
    ViewBag.Title = "Update Profile";
}

<h2>Update Profile</h2>

<form asp-action="UpdateProfile" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="BloodGroup"></label>
        <select asp-for="BloodGroup" asp-items="Html.GetEnumSelectList<BloodGroup>()"></select>
        <span asp-validation-for="BloodGroup" class="text-danger"></span>
    </div>

    <button type="submit">Save Changes</button>
</form>

@if (TempData["Success"] != null)
{
    <p style="color:green;">@TempData["Success"]</p>
}
@if (TempData["Error"] != null)
{
    <p style="color:red;">@TempData["Error"]</p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
