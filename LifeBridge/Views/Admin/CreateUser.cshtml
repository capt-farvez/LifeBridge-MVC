@model LifeBridge.Models.User
@{
    ViewBag.Title = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create User</h2>

<form asp-controller="Admin" asp-action="CreateUser" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div>
        <label>Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div>
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div>
        <label>Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>
    <div>
        <label>Blood Group</label>
        <select asp-for="BloodGroup" asp-items="Html.GetEnumSelectList<LifeBridge.Models.BloodGroup>()" class="form-control"></select>
    </div>
    <div>
        <label>User Role</label>
        <select asp-for="Role" asp-items="Html.GetEnumSelectList<LifeBridge.Models.Role>()" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p style="color:red;">@error.ErrorMessage</p>
    }
}
