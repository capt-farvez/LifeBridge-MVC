@model LifeBridge.Models.RequestBloodDonation
@{
    ViewData["Title"] = "Request Blood Donation";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="RequestBloodDonation" method="post">
    <div class="form-group">
        <label asp-for="Bloodgroup">Blood Group</label>
        <input asp-for="Bloodgroup" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Perpose">Purpose</label>
        <input asp-for="Perpose" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit Request</button>
</form>
